{
  "name": "react-moveable",
  "version": "0.56.0",
  "type": "module",
  "description": "A React Component that create Moveable, Draggable, Resizable, Scalable, Rotatable, Warpable, Pinchable, Groupable.",
  "main": "./dist/moveable.cjs.js",
  "module": "./dist/moveable.esm.js",
  "browser": "./dist/moveable.umd.js",
  "types": "declaration/index.d.ts",
  "exports": {
    ".": {
      "types": "./declaration/index.d.ts",
      "browser": "./dist/moveable.umd.js",
      "import": "./dist/moveable.esm.js",
      "require": "./dist/moveable.cjs.js",
      "default": "./dist/moveable.esm.js"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "files": [
    "dist/*",
    "declaration/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "lint": "eslint ./src/",
    "bake": "bake",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:type": "tsc -p tsconfig.test.json",
    "coverage": "vitest run --coverage",
    "build": "npm run lint && npm run test:type && npm run build:esm-cjs && npm run build:umd && print-sizes ./dist",
    "build:esm-cjs": "vite build",
    "build:umd": "BUILD_UMD=true vite build",
    "analyze": "vite-bundle-analyzer dist/",
    "size-limit": "size-limit",
    "build:analyze": "npm run build && npm run analyze",
    "build:size": "npm run build && bundlesize"
  },
  "keywords": [
    "moveable",
    "resizable",
    "scalable",
    "draggable",
    "rotatable",
    "warpable",
    "pinchable",
    "groupable",
    "snappable",
    "scrollable",
    "movable",
    "throttle",
    "scroll",
    "ratio",
    "dom",
    "resize",
    "scale",
    "drag",
    "move",
    "rotate",
    "react",
    "warp",
    "snap",
    "pinch",
    "react"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/daybrush/moveable/blob/master/packages/react-moveable"
  },
  "author": "Daybrush",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/daybrush/moveable/issues"
  },
  "homepage": "https://daybrush.com/moveable",
  "devDependencies": {
    "@daybrush/tester": "^0.1.3",
    "@eslint/js": "^9.0.0",
    "@scena/react-guides": "^0.28.2",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.5.2",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^5.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.1",
    "eslint": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-react": "^7.35.0",
    "gh-pages": "^2.1.1",
    "jsdom": "^27.0.0",
    "keycon": "^1.0.0",
    "print-sizes": "^0.2.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-infinite-viewer": "^0.28.1",
    "react-keycon": "^0.3.0",
    "react-selecto": "^1.24.0",
    "ts-loader": "^8.1.0",
    "tslib": "^2.3.1",
    "typescript": "^5.0.0",
    "vite": "^7.1.6",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-externals": "^0.6.2",
    "vitest": "^3.2.4",
    "wait-on": "^9.0.0",
    "vite-bundle-analyzer": "^0.7.0",
    "size-limit": "^8.2.0",
    "@size-limit/preset-small-lib": "^8.2.0",
    "bundlesize": "^0.18.0"
  },
  "dependencies": {
    "@egjs/agent": "^2.2.1",
    "@egjs/children-differ": "^1.0.1",
    "@egjs/list-differ": "^1.0.0",
    "@scena/dragscroll": "^1.4.0",
    "@scena/event-emitter": "^1.0.5",
    "@scena/matrix": "^1.1.1",
    "css-to-mat": "^1.1.1",
    "framework-utils": "^1.1.0",
    "gesto": "^1.19.3",
    "overlap-area": "^1.1.0",
    "react-css-styled": "^1.1.9",
    "react-selecto": "^1.25.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "bundlesize": [
    {
      "path": "./dist/moveable.esm.js",
      "maxSize": "350kb"
    },
    {
      "path": "./dist/ables-basic.js",
      "maxSize": "100kb"
    }
  ]
}
